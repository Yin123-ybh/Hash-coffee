<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.sky.mapper.OrderCouponMapper">

    <insert id="insertBatch">
        insert into order_coupon (order_id, coupon_id, discount_amount, create_time)
        values
        <foreach collection="orderCoupons" item="orderCoupon" separator=",">
            (#{orderCoupon.orderId}, #{orderCoupon.couponId}, #{orderCoupon.discountAmount}, #{orderCoupon.createTime})
        </foreach>
    </insert>

    <select id="getByOrderId" resultType="com.sky.entity.OrderCoupon">
        select * from order_coupon where order_id = #{orderId}
    </select>

    <select id="getByCouponId" resultType="com.sky.entity.OrderCoupon">
        select * from order_coupon where coupon_id = #{couponId}
    </select>

</mapper>
